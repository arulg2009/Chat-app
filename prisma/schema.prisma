// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?   // This will store the nickname (display name)
  realName      String?   // User's real full name (for password recovery)
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  bio           String?   @db.Text
  hobbies       String?   @db.Text // Comma-separated hobbies
  location      String?
  website       String?
  phone         String?
  dateOfBirth   DateTime?
  gender        String?
  occupation    String?
  status        String    @default("offline") // online, offline, away
  lastSeen      DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts             Account[]
  sessions             Session[]
  sentMessages         Message[]              @relation("SentMessages")
  conversationUsers    ConversationUser[]
  initiatedCalls       Call[]                 @relation("CallInitiator")
  receivedCalls        Call[]                 @relation("CallReceiver")
  typingIndicators     TypingIndicator[]
  readReceipts         ReadReceipt[]
  sentChatRequests     ChatRequest[]          @relation("SentRequests")
  receivedChatRequests ChatRequest[]          @relation("ReceivedRequests")
  createdGroups        Group[]                @relation("GroupCreator")
  groupMemberships     GroupMember[]
  groupMessages        GroupMessage[]
  messageReactions     MessageReaction[]
  groupMessageReactions    GroupMessageReaction[]
  groupMessageReadReceipts GroupMessageReadReceipt[]
  groupTypingIndicators    GroupTypingIndicator[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id          String   @id @default(cuid())
  name        String?
  isGroup     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  messages          Message[]
  users             ConversationUser[]
  typingIndicators  TypingIndicator[]
}

model ConversationUser {
  id             String   @id @default(cuid())
  userId         String
  conversationId String
  joinedAt       DateTime @default(now())
  role           String   @default("member") // admin, member
  mutedUntil     DateTime?

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@unique([userId, conversationId])
  @@index([userId])
  @@index([conversationId])
}

model Message {
  id             String   @id @default(cuid())
  content        String   @db.Text
  type           String   @default("text") // text, image, file, audio, video
  senderId       String
  conversationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  replyToId      String?
  isEdited       Boolean  @default(false)
  isDeleted      Boolean  @default(false)
  isForwarded    Boolean  @default(false)
  isStarred      Boolean  @default(false)
  metadata       Json?    // For file info, voice duration, etc.

  sender       User              @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  conversation Conversation      @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  replyTo      Message?          @relation("MessageReplies", fields: [replyToId], references: [id])
  replies      Message[]         @relation("MessageReplies")
  readReceipts ReadReceipt[]
  reactions    MessageReaction[]

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
}

model MessageReaction {
  id        String   @id @default(cuid())
  emoji     String
  userId    String
  messageId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([userId, messageId, emoji])
  @@index([messageId])
  @@index([userId])
}

model ReadReceipt {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  readAt    DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([messageId])
  @@index([userId])
}

model TypingIndicator {
  id             String   @id @default(cuid())
  userId         String
  conversationId String
  isTyping       Boolean  @default(true)
  updatedAt      DateTime @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@unique([userId, conversationId])
  @@index([conversationId])
}

model Call {
  id           String   @id @default(cuid())
  initiatorId  String
  receiverId   String
  type         String   // audio, video
  status       String   @default("pending") // pending, active, ended, missed, rejected
  startedAt    DateTime @default(now())
  endedAt      DateTime?
  duration     Int?     // in seconds
  metadata     Json?    // For WebRTC signaling data

  initiator User @relation("CallInitiator", fields: [initiatorId], references: [id], onDelete: Cascade)
  receiver  User @relation("CallReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([initiatorId])
  @@index([receiverId])
  @@index([status])
}

// Chat Request model - users must send request before chatting
model ChatRequest {
  id          String   @id @default(cuid())
  senderId    String
  receiverId  String
  status      String   @default("pending") // pending, accepted, rejected
  message     String?  @db.Text // Optional message with request
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  respondedAt DateTime?

  sender   User @relation("SentRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
  @@index([status])
  @@index([createdAt])
}

// Group model for group chats
model Group {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  image       String?
  isPrivate   Boolean  @default(false) // true = private, false = public
  creatorId   String
  maxMembers  Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator          User                  @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members          GroupMember[]
  messages         GroupMessage[]
  typingIndicators GroupTypingIndicator[]

  @@index([creatorId])
  @@index([isPrivate])
  @@index([createdAt])
}

// Group membership
model GroupMember {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  role      String   @default("member") // creator, admin, member
  joinedAt  DateTime @default(now())
  mutedUntil DateTime?

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
  @@index([role])
}

// Group messages
model GroupMessage {
  id          String   @id @default(cuid())
  content     String   @db.Text
  type        String   @default("text") // text, image, file, system, audio, voice
  senderId    String
  groupId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isEdited    Boolean  @default(false)
  isDeleted   Boolean  @default(false)
  isForwarded Boolean  @default(false)
  replyToId   String?
  metadata    Json?    // For file info, voice duration, forwarded from info, etc.

  sender    User                   @relation(fields: [senderId], references: [id], onDelete: Cascade)
  group     Group                  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  replyTo   GroupMessage?          @relation("GroupMessageReplies", fields: [replyToId], references: [id])
  replies   GroupMessage[]         @relation("GroupMessageReplies")
  reactions GroupMessageReaction[]
  readBy    GroupMessageReadReceipt[]

  @@index([groupId])
  @@index([senderId])
  @@index([createdAt])
}

// Group message reactions
model GroupMessageReaction {
  id        String   @id @default(cuid())
  emoji     String
  userId    String
  messageId String
  createdAt DateTime @default(now())

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  message GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([userId, messageId, emoji])
  @@index([messageId])
  @@index([userId])
}

// Group message read receipts
model GroupMessageReadReceipt {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  readAt    DateTime @default(now())

  message GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([messageId])
  @@index([userId])
}

// Group typing indicators
model GroupTypingIndicator {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  isTyping  Boolean  @default(true)
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([groupId])
}
